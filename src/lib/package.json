{
  "$schema": "../../node_modules/ng-packagr/package.schema.json",
  "name": "@metalefs/ngx-codemirror-directive",
  "version": "0.0.10",
  "license": "MIT",
  "description": "CodeMirror wrapper for Angular",
  "dependencies": {
    "@types/codemirror": "^5.60.5"
  },
  "peerDependencies": {
    "@angular/core": ">=12.0.0-0",
    "@angular/forms": ">=12.0.0-0",
    "@codemirror/autocomplete": "6.3.0",
    "@codemirror/commands": "6.1.1",
    "@codemirror/lang-markdown": "6.0.1",
    "@codemirror/language": "6.2.1",
    "@codemirror/search": "6.2.1",
    "@codemirror/state": "6.1.2",
    "@codemirror/view": "6.3.0",
    "codemirror": ">=6.0.1"
  },
  "repository": "scttcper/ngx-codemirror",
  "homepage": "https://github.com/Metalefs/ngx-codemirror-custom-directive",
  "bugs": "https://github.com/Metalefs/ngx-codemirror-custom-directive/issues",
  "keywords": [
    "ngx",
    "angular",
    "codemirror"
  ],
  "ngPackage": {
    "allowedNonPeerDependencies": [
