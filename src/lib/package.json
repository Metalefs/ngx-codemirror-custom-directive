    "@angular/core": ">=12.0.0-0",
    "@angular/forms": ">=12.0.0-0",
    "@codemirror/autocomplete": "^0.20.0",
    "codemirror": ">=5.65.3"
  },
  "repository": "scttcper/ngx-codemirror",
  "homepage": "https://github.com/Metalefs/ngx-codemirror-custom-directive",
